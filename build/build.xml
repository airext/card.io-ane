<?xml version="1.0" encoding="UTF-8"?>
<project name="Air Native Extension Build Scripts" default="all">

    <property name="ane.name" value="card.io" />
    <property name="project.name" value="card.io-ane" />

	<property file="build.properties"/>
		
	<!--<target name="all" depends="ios,android,air,default,package" description="Full build of extension"/>-->
	<target name="all" depends="ios,air,default,package" description="Full build of extension"/>

	<target name="ios" description="Build iOS Library">

        <!-- Create temporary directory for iOS artifacts -->
        <mkdir dir="temp/ios/build/"/>

        <!-- Installs Pods dependencies (loads CardIO.a library from repository) -->
		<exec executable="pod" dir="../card.io-ane-ios/CardIO">
			<arg value="install"/>
		</exec>

        <!-- Build iOS part of the extension -->
		<exec executable="xcodebuild" failonerror="true" dir="../${project.name}-ios/CardIO">
			<arg line='-workspace CardIO.xcworkspace'/>
			<arg line='-scheme CardIO'/>
			<arg line='-sdk iphoneos' />
			<arg line='-configuration Release'/>
			<arg line='SYMROOT=$(PWD)/../build/temp/ios/build'/>
		</exec>

        <!-- Copy iOS build artifacts to temporary build folder -->
		<copy file="temp/ios/build/Release-iphoneos/libANXCardIO.a" todir="temp/ios" overwrite="true"/>

        <!-- Copy CardIO library from Pods -->
        <copy file="../${project.name}-ios/CardIO/Pods/CardIO/CardIO/libCardIO.a" todir="temp/ios" overwrite="true"/>

        <!-- Remove temporary directory for iOS artifacts -->
		<delete dir="temp/ios/build/"/>
	</target>
		
	<target name="android" description="Build android Library">
		<delete dir="../android/temp"/>
		<mkdir dir="../android/temp/classes"/>

		<javac srcdir="../android/src" destdir="../android/temp/classes" includeantruntime="false">
			<classpath>
				<pathelement location="${android.sdk}/android.jar"/>
				<pathelement location="../android/libs/FlashRuntimeExtensions.jar"/>
				<pathelement location="../android/libs/flurryAnalytics_3.4.0.jar"/>
			</classpath>
		</javac>

		<mkdir dir="../android/temp/zip"/>
		<unzip src="../android/libs/flurryAnalytics_3.4.0.jar" dest="../android/temp/zip"/>
		<copydir src="../android/temp/zip/com" dest="../android/temp/classes/com"/>
		
		<mkdir dir="../temp/android/"/>
		<jar basedir="../android/temp/classes" destfile="../temp/android/${name}AndroidExtension.jar"/>
		<delete dir="../android/temp"/>
	</target>
		
	<target name="air" description="Build swc library">
		<mkdir dir="temp/swc/build/"/>
		
		<fileset dir="../${project.name}-air/card.io/src" casesensitive="yes" id="classfiles">
			<include name="**/*.as"/>
		</fileset>

		<pathconvert property="classlist" refid="classfiles" pathsep=" " dirsep=".">
			<regexpmapper from=".*src.(.*)\.as" to="\1"/>
		</pathconvert>
		
		<exec executable="${sdk.home}/bin/compc${bin.ext}" failonerror="true">
			<arg line='-source-path ../${project.name}-air/card.io/src'/>
			<arg line='-output temp/swc/${ane.name}.swc'/>
			<arg line='-swf-version=13'/>
			<arg line='-external-library-path+="${sdk.home}/frameworks/libs/air/airglobal.swc"'/>
			<arg line='-include-classes ${classlist}'/>
		</exec>

		<unzip src="temp/swc/${ane.name}.swc" dest="temp/swc/build" overwrite="true"/>
		<copy file="temp/swc/build/library.swf" todir="temp/ios" overwrite="true"/>
		<copy file="temp/swc/build/library.swf" todir="temp/android" overwrite="true"/>

		<delete dir="temp/swc/build/"/>
	</target>
	
	<target name="default" description="Build default swc library">
		<mkdir dir="temp/default/"/>
		
		<fileset dir="../${project.name}-air/card.io-default/src" casesensitive="yes" id="classfiles2">
			<include name="**/*.as"/>
		</fileset>

		<pathconvert property="classlist-default" refid="classfiles2" pathsep=" " dirsep=".">
			<regexpmapper from=".*src.(.*)\.as" to="\1"/>
		</pathconvert>
		
		<exec executable="${sdk.home}/bin/compc${bin.ext}" failonerror="true">
			<arg line='-source-path ../${project.name}-air/card.io-default/src'/>
			<arg line='-output temp/default/${ane.name}.swc'/>
			<arg line='-swf-version=13'/>
			<arg line='-external-library-path+="${sdk.home}/frameworks/libs/air/airglobal.swc"'/>
			<arg line='-include-classes ${classlist-default}'/>
		</exec>

		<unzip src="temp/default/${ane.name}.swc" dest="temp/default/swc" overwrite="true"/>
		<copy file="temp/default/swc/library.swf" todir="temp/default" overwrite="true"/>
		<delete dir="temp/default/swc"/>
	</target>
	
	<target name="package" description="Create the extension package">
		<exec executable="${sdk.home}/bin/adt${bin.ext}" failonerror="true" dir="temp">
			<arg value="-package"/>
			<arg value="-storetype"/>
			<arg value="pkcs12"/>
			<arg value="-keystore"/>
			<arg value="${keystore.file}"/>
			<arg value="-storepass"/>
			<arg value="${keystore.password}"/>
			<arg value="-target"/>
			<arg value="ane"/>
			<arg value="${ane.name}.ane"/>
			<arg value="../extension.xml"/>
			<arg line="-swc swc/${ane.name}.swc"/>
			<arg line="-platform iPhone-ARM -platformoptions ../platform-ios.xml -C ios/ ."/>
			<!--<arg line="-platform Android-ARM -C android/ ."/>-->
			<!--<arg line="-platform Android-x86 -C android/ ."/>-->
			<arg line="-platform default -C default/ ."/>
		</exec>
		
		<move file="temp/${ane.name}.ane" todir="../bin"/>
		<move file="temp/default/${ane.name}.swc" todir="../bin"/>
		<delete dir="temp"/>
        <copy file="../bin/${ane.name}.ane" todir="../card.io-ane-air/card.io-debug/ane" overwrite="true" />
	</target>

</project> 	